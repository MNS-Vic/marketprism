# MarketPrism Data Collector 环境变量配置
# 简化版本 - 专注launcher模式

# ==================== 基础配置 ====================
LOG_LEVEL=INFO
COLLECTOR_MODE=launcher

# ==================== NATS配置 ====================
MARKETPRISM_NATS_SERVERS=nats://nats:4222
NATS_PORT=4222
NATS_HTTP_PORT=8222

# ==================== 端口配置 ====================
# launcher模式专用端口
HEALTH_PORT=8086
METRICS_PORT=9092

# ==================== 交易所API密钥 (可选) ====================
# Binance
BINANCE_API_KEY=
BINANCE_API_SECRET=

# OKX
OKX_API_KEY=
OKX_API_SECRET=
OKX_PASSPHRASE=

# Deribit
DERIBIT_API_KEY=
DERIBIT_API_SECRET=

# ==================== 高级配置 ====================
# 资源限制
MEMORY_LIMIT=2G
CPU_LIMIT=1.0

# 日志配置
LOG_FORMAT=json
LOG_ROTATION=true

# 监控配置
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
