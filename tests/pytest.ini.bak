[pytest]
markers =
    unit: 单元测试
    integration: 集成测试
    performance: 性能测试
    load: 负载测试
    load_testing: 负载测试
    slow: 耗时较长的测试
    fast: 执行快速的测试
    flaky: 不稳定的测试，可能需要多次运行
    io: 涉及IO操作的测试
    dependency: 依赖外部服务的测试

testpaths = tests
python_files = test_*.py
python_functions = test_*
asyncio_mode = auto
asyncio_default_fixture_loop_scope = function

# 日志配置
log_cli = 1
log_cli_level = INFO
log_format = %(asctime)s %(levelname)s %(message)s
log_date_format = %Y-%m-%d %H:%M:%S

# 添加并行执行和优化选项
addopts = 
    -v
    --strict-markers
    --color=yes
    --durations=10
    --showlocals

# 禁用警告
filterwarnings =
    ignore::DeprecationWarning
    ignore::PendingDeprecationWarning
    ignore::ImportWarning
    ignore::ResourceWarning

# 环境变量 (注释掉，因为pytest不支持env配置)
# env =
#     D:PYTHONHASHSEED=0
#     D:PYTHONPATH={toxinidir}

# 缓存配置
cache_dir = .pytest_cache

# 插件设置
junit_family = xunit2

# 覆盖率配置
[coverage:run]
source = services
omit = 
    */tests/*
    */venv/*
    */config/*
    */scripts/*
    */__pycache__/*
    */.pytest_cache/*

[coverage:report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise NotImplementedError
    if __name__ == .__main__.:
    pass
    raise ImportError
    except ImportError
    
# 并行执行选项
[pytest-xdist]
maxprocesses = 4
timeout = 300

# HTML报告配置
[pytest-html]
title = MarketPrism测试报告